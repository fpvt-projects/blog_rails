<h1>Edit Article</h1>

<%= form_with(model: @article, local: true) do |f| %>
 <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
 </p>
 <p>
    <%= f.label :author %><br/>
    <%= f.text_field :author%>
 </p>
 <p>
    <%= f.label :content %><br/>
    <%= f.text_area :content%>
 </p>
 <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description%>
 </p>

 <%= f.submit %>
<% end %>